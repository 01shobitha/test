/* Misc */
/* Feature pages */
.notes { font-size: 9px; }
.notes ol { list-style-type: decimal; padding-left: 30px; margin-bottom: 1em; }
.notes li { line-height: 135%; padding: 0 0 4px 5px; list-style-position: outside; }

.vlcversion { font-size: 16px; }

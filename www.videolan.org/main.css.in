}

#mainbox .download {
  padding-left: 18px;
  background: url(images/frontpage/download.png) left center no-repeat;
}

p.image { float: left; padding: 14px 5px 0px 5px; }

#project_statement p { color: #686868;}
#project_statement h2 { color: #555;}
#mainbox p { line-height: 150%; margin: 0.5em 0 0.5em 0; }

div.project { width: 200px; float: left;  padding: 0 5px 2px; height: 80px; }
div.project h3 { font-size: 12px; color: #666; border-bottom: none; }

ul.menu {
